<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.awais.gtl.Fragments.TodayReceipts">



    <com.riyagayasen.easyaccordion.AccordionView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/sale_accordion"
        android:visibility="visible"
        app:isAnimated="true"
        app:heading="This is a demo accordion"
        app:isExpanded="false"
        app:isPartitioned="true"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/today_receipt_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
            />

    </com.riyagayasen.easyaccordion.AccordionView>
</RelativeLayout>
