<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="120dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/operation_rlv"
    >


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/today_invoice"
        android:id="@+id/operation_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today Invoices"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/operation_icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/operation_name"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/operation_name"
        android:layout_marginTop="5dp"
        android:id="@+id/line"
        android:layout_centerHorizontal="true">


    </RelativeLayout>




</RelativeLayout>