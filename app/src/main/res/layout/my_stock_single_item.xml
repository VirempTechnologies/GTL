<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="160dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMenuBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bag_rlv">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/upper_rlv"
            >

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:id="@+id/product_image_rlv"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/product_1"
                    android:id="@+id/product_image"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_details_rlv"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/product_image_rlv"
                android:layout_marginRight="5dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_name_rlv">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Samsung J5 pro J530"
                        android:textColor="@color/colorAccentDark"
                        android:textSize="18dp"
                        android:id="@+id/product_name"
                        android:layout_marginTop="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/my_stock_rlv"
                    android:layout_below="@+id/product_name_rlv">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_stock_lable"
                        android:text="My Stock: "
                        android:textSize="12dp"
                        android:textColor="@color/colorAccentDark"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/my_stock"
                        android:text="10"
                        android:layout_centerVertical="true"
                        android:textSize="14dp"
                        android:layout_toRightOf="@+id/my_stock_lable"
                        android:textColor="@color/colorAccentDark"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/company_stock_rlv"
                    android:layout_below="@+id/my_stock_rlv">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/company_stock_lable"
                        android:text="Company Stock: "
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorAccentDark"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/company_stock_text"
                        android:text="200"
                        android:textSize="14dp"
                        android:layout_toRightOf="@+id/company_stock_lable"
                        android:textColor="@color/colorAccentDark"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_price_rlv"
                    android:layout_below="@+id/company_stock_rlv">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sale Price: "
                        android:textColor="@color/colorAccentDark"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/price_lable"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="990 "
                        android:textColor="@color/colorAccentDark"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/price_text"
                        android:layout_toRightOf="@+id/price_lable"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬"
                        android:textColor="@color/colorAccentDark"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/price_text_cat"
                        android:layout_toRightOf="@+id/price_text"
                        />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>