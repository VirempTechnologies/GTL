<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:drawable="@drawable/button_border_round_selected"/>
    <item android:state_focused="true" android:drawable="@drawable/button_border_round_selected"/>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:gradientRadius="45"
                android:centerX="100%"
                android:centerY="50%"
                android:centerColor="#FFFFFA"
                android:startColor="#FFFFFA"
                android:endColor="#FFFFFA"
                android:type="radial"
                />

            <stroke
                android:width="1dp"
                android:color="#FFFFFA"
                />

        </shape>
    </item>
    <item android:drawable="@drawable/button_border_round"/>

</selector>